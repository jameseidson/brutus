load("@crate_index//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library")

rust_binary(
    name = "main",
    srcs = ["src/main.rs"],
    deps = all_crate_deps() + ["brutus-server"],
)

rust_library(
    name = "brutus-server",
    srcs = glob(["src/**/*.rs"], exclude = ["src/main.rs"]),
    deps = all_crate_deps(),
)
